<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context=".Results">

    <LinearLayout
        android:layout_width="395dp"
        android:layout_height="200dp"
        android:gravity="center"
        android:orientation="vertical"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="8dp">

        <TextView
            android:id="@+id/totalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Total focused time:\n"
            android:textColor="@color/textWhite"
            android:textSize="20dp" />

        <TextView
            android:id="@+id/totalTimeToday"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="Todays focused time:\n"
            android:textColor="@color/textWhite"
            android:textSize="20dp" />

        <Button
            android:id="@+id/dailyStat"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:background="@color/colorBG"
            android:text="Daily statistics"
            android:textColor="@color/textWhite" />

        <Button
            android:id="@+id/weeklyStat"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_weight="1"
            android:background="@color/colorBG"
            android:text="Weekly statistics"
            android:textColor="@color/textWhite" />


    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="392dp"
        android:layout_marginTop="236dp"
        android:layout_marginBottom="35dp"
        android:background="@drawable/buttonbg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:layout_editor_absoluteX="0dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            tools:layout_editor_absoluteX="0dp">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text="\nPrevious focus\n"
                android:textColor="@color/textWhite"
                android:textSize="20dp" />

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center"
                android:text=""
                android:textColor="@color/textWhite"
                android:textSize="15dp" />
        </LinearLayout>
    </ScrollView>

</android.support.constraint.ConstraintLayout>